<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <%= form_for(novel) do |n| %>
      <%= render 'layouts/error_messages', model: n.object %>

      <div class="form-group">
        <%= n.label :title, 'タイトル' %>
        <%= n.text_field :title, class: 'form-control' %>
        <P>入力文字数制限：100文字</P>
      </div>

      <div class="form-group">
        <%= n.label :summary, 'あらすじ' %>
        <%= n.text_area :summary, class: 'form-control', rows: 10 %>
        <P>入力文字数制限：1000文字</P>
      </div>
      
      <div class="form-group">
        <%= n.label :tag_list, "タグ" %>
        <%= n.text_field :tag_list, value: @novel.tag_list.join(','), class: "form-control" %>
        <P>タグはコンマ(,)区切りで入力してください。(例)ファンタジー,ラブコメ,冒険,・・・など</P>
      </div>
      
      <% if request.path_info = new_novel_path %>
        <%= n.submit '作成', class: 'btn btn-primary btn-block' %>
      <% else %>
        <%= n.submit '更新', class: 'btn btn-primary btn-block' %>
      <% end %>
      
    <% end %>
  </div>
</div>